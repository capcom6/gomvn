                },
                "allowed": {
                    "description": "Allowed paths",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "deploy": {
                    "description": "Is allowed to deploy",
                    "type": "boolean"
                },
                "name": {
                    "description": "User name",
                    "type": "string"
                }
            }
        },
        "server.apiPostUsersResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "description": "User ID",
                    "type": "integer"
                },
                "name": {
                    "description": "User name",
                    "type": "string"
                },
                "token": {
